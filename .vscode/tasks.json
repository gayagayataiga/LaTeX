{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build LaTeX (pdflatex)",
      "type": "shell",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build LaTeX Japanese (uplatex)",
      "type": "shell",
      "command": "uplatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-kanji=utf8",
        "${file}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Convert DVI to PDF",
      "type": "shell",
      "command": "dvipdfmx",
      "args": [
        "${fileBasenameNoExtension}.dvi"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Japanese LaTeX (uplatex + dvipdfmx)",
      "dependsOn": [
        "Build LaTeX Japanese (uplatex)",
        "Convert DVI to PDF"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
